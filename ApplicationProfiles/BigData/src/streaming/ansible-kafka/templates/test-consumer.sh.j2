{% if groups['zookeeper'] is defined %}
/usr/local/etc/kafka/bin/kafka-console-consumer.sh --zookeeper {% for host in groups['zookeeper'] -%} {{ hostvars[host]['ansible_ssh_host'] }}:2181,
{%- endfor %} --topic test --from-beginning
{% else %}
/usr/local/etc/kafka/bin/kafka-console-consumer.sh --zookeeper localhost:2181 --topic test --from-beginning
{% endif %}
